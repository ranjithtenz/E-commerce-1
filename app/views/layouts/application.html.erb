<!DOCTYPE html>
<html>
<head>
  <title>Store</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
<div id="banner">
  <%= image_tag("logo.png") %>
  <%= @page_title || "Pragmatic Bookshelf" %>
</div>
<div id="columns">

  <div id="side">

    <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
            <%= render @cart %>
        <% end %>
    <% end %>

    <a href="http://namba.kg">Home</a><br/>
    <a href="http://mail.ru">Questions</a><br/>
    <a href="http://new.ru">News</a><br/>
    <a href="http://torrents.kg">Contact</a><br/>

  </div>

  <div id="main">
    <%= yield %>
  </div>

</div>

</body>
</html>
